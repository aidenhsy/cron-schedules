{
  "name": "scheduled-checks",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:procurement": "prisma db pull --schema=prisma/procurement.prisma && prisma generate --schema=prisma/procurement.prisma",
    "db:inventory": "prisma db pull --schema=prisma/inventory.prisma && prisma generate --schema=prisma/inventory.prisma",
    "db:imbasic": "prisma db pull --schema=prisma/imbasic.prisma && prisma generate --schema=prisma/imbasic.prisma",
    "db:scmbasic": "prisma db pull --schema=prisma/scmbasic.prisma && prisma generate --schema=prisma/scmbasic.prisma",
    "db:scmorder": "prisma db pull --schema=prisma/scmorder.prisma && prisma generate --schema=prisma/scmorder.prisma",
    "db:scmpricing": "prisma db pull --schema=prisma/scmpricing.prisma && prisma generate --schema=prisma/scmpricing.prisma",
    "db:all": "npm run db:procurement && npm run db:imbasic && npm run db:inventory && npm run db:scmbasic && npm run db:scmorder && npm run db:scmpricing",
    "dev:procurement": "prisma db pull --schema=prisma/dev-procurement.prisma && prisma generate --schema=prisma/dev-procurement.prisma",
    "dev:inventory": "prisma db pull --schema=prisma/dev-inventory.prisma && prisma generate --schema=prisma/dev-inventory.prisma",
    "dev:imbasic": "prisma db pull --schema=prisma/dev-imbasic.prisma && prisma generate --schema=prisma/dev-imbasic.prisma",
    "dev:scmbasic": "prisma db pull --schema=prisma/dev-scmbasic.prisma && prisma generate --schema=prisma/dev-scmbasic.prisma",
    "dev:scmorder": "prisma db pull --schema=prisma/dev-scmorder.prisma && prisma generate --schema=prisma/dev-scmorder.prisma",
    "dev:scmpricing": "prisma db pull --schema=prisma/dev-scmpricing.prisma && prisma generate --schema=prisma/dev-scmpricing.prisma",
    "dev:all": "npm run dev:procurement && npm run dev:imbasic && npm run dev:inventory && npm run dev:scmbasic && npm run dev:scmorder && npm run dev:scmpricing"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^6.0.2",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@prisma/client": "^6.12.0",
    "@saihu/common": "^1.1.19",
    "axios": "^1.11.0",
    "json-bigint": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/json-bigint": "^1.0.4",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.12.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
